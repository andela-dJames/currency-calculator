<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name ="android:textColor">#ECEFF1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_color">
        <item name ="android:textColor">#B0BEC5</item>
    </style>
    <style name="screen_color">
        <item name="android:background">#ECEFF1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="applicationTheme" parent="@android:style/Theme.Holo.Light">

    </style>

    <style name="AppTheme.newAppTheme" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#00ff00</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">#ECEFF1</item>
    </style>
    <style name="keypadStyle">
        <item name="android:textColor">#607D8B</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/key_state_listener</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="keypadStyle_land">
        <item name="android:textColor">#607D8B</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/key_state_listener</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="keypadStyleOperator">
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/key_state_listener</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="keypadStyleOperator_land">
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/key_state_listener</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
