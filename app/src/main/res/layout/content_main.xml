<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.andela.currency_calculator.Activities.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/bluegrey"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main" tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="4"
                android:layout_gravity="center|start"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_weight="1.05">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_seven"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/seven"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_eight"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/eight"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_nine"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/nine"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_clear"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/clear"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed"
                        android:contextClickable="false"
                        android:longClickable="true" />
                </TableRow>
                <TableRow  android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_four"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/four"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_five"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/five"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_six"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/six"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_divide"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyleOperator"
                        android:text="@string/divide"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                </TableRow>
                <TableRow  android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_one"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/one"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_two"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/two"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_three"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/three"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_multiply"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyleOperator"
                        android:text="@string/multiply"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                </TableRow>

            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="5"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_weight="0.84">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/decimal_separator"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/decimal_separator"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_zero"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/zero"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_equal"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyle"
                        android:text="@string/evaluate"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_addition"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyleOperator"
                        android:text="@string/plus"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/key_subtraction"
                        android:layout_column="0"
                        android:layout_weight="1"
                        style="@style/keypadStyleOperator"
                        android:text="@string/minus"
                        android:textStyle="bold"
                        android:onClick="onKeyPressed" />


                </TableRow>

            </TableLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/calculator_screen_height"
            style="@style/screen_color"
            android:id="@+id/calculator_screen"
            android:gravity="top"
            android:elevation="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/expression_screen_height"
                android:padding="@dimen/screen_padding"
                android:gravity="center_vertical|right"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/expression_screen"
                android:layout_gravity="center_horizontal"
                style="@style/text_color"
                android:singleLine="true"
                android:textDirection="ltr"
                android:textSize="@dimen/expresion_screen_text_size"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/expression_scroll_view"
                android:fillViewport="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:padding="@dimen/screen_padding"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/evaluation_screen"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|right"
                    style="@style/text_color"
                    android:textSize="@dimen/result_screen_text_size"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="false" />
            </HorizontalScrollView>
        </LinearLayout>

    </FrameLayout>
    </RelativeLayout>