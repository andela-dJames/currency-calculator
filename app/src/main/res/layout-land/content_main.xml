<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/bottom_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout_above"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/base_currency_text"
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:hint="base currency"
            android:layout_gravity="left" />
        <Spinner
            android:id="@+id/base_currency_spinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_above"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        android:id="@+id/linear_layout_below"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_above"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <EditText
            android:id="@+id/target_currency_text"
            android:layout_width="459dp"
            android:layout_height="wrap_content"
            android:hint="target currency"
            android:layout_gravity="left" />
        <Spinner
            android:id="@+id/target_currency_spinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"></Spinner>
    </LinearLayout>
</RelativeLayout>